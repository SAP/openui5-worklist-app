	<SemanticPage showFooter="true">
		<titleHeading>
			<m:Title text="Semantic Page Title" />
		</titleHeading>

		<headerContent>
			<m:Text text="Semantic Page Header Content"/>
		</headerContent>

		<titleMainAction>
			<TitleMainAction text="Main Action"/>
		</titleMainAction>

		<titleCustomTextActions>
			<m:Button text="Custom Text Button"/>
